# ============================================
# VARIABLES DE ENTORNO - VerdeGo (EJEMPLO)
# ============================================
# Copia este archivo a .env y configura tus valores
# ============================================

# Puerto del servidor
PORT=3000

# JWT Secret Key (generar una clave única y fuerte)
# Puedes generar una con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_clave_secreta_aqui_cambiar_en_produccion

# JWT Expiración
JWT_EXPIRES_IN=24h

# Base de datos
DB_PATH=./database/database.db

# Entorno (development, production)
NODE_ENV=development

# Configuración de CORS
CORS_ORIGIN=*
